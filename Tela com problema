    public void populaTabela() {
        try {
            File diretorio = new File(NOMEPASTA_ONDEESTAO_OS_ARQUIVOS);
            File arquivos[];

            // lista somente arquivos TXT
            arquivos = diretorio.listFiles((File pathname) -> pathname.getName().toLowerCase().endsWith(".txt"));

            for (int i =0; i < arquivos.length; i++) {
            
            String nomeArquivo = arquivos[i].getName();
            BufferedReader reader = new BufferedReader(new FileReader(NOMEPASTA_ONDEESTAO_OS_ARQUIVOS + nomeArquivo ));
	    modelo = (DefaultTableModel) jTable1.getModel();
	    modelo.setNumRows(i);//Numero de linha tem que ser a mesma quantidade de arquivos;
	    jTable1.setModel(modelo);//mudei aqui. model ficou global e não local.
	    
            String linha = "";
            String col1="";
            String col2="";
            String col3="";
            String col4="";
            String col5="";//nova linha
            String col6="";
            String exercicio[] = new String[200];
            int indice  = 0;
            int nrErros = 0;
            
            while ((linha = reader.readLine()) != null) {
                switch (indice) {
                    case 0:
                        col1 = linha.split("\\:")[1];
                        break;
                    case 1:
                        col2 = linha.split("\\:")[1];
                        break;
                    case 2:
                        col3 = linha.split("\\:")[1];
                        break;
                    case 3:
                        col4 = linha.split("\\:")[1];
                        col6 = status( col4 ); 
                        break;
                    default:
                        System.out.println(linha);
                        col5 = pegarUltimaLinha(linha);//função que pega a ultima linha.
                        System.out.println(col5);
                        break;
                }
                indice++;
	    }
            
            linha = col1 + ":" + col2 +":" + col3 + ":" + col4 + ":"+col5 + ":"+col6;//add coluna 5 e 6
            modelo.addRow(linha.split(":"));
            
        }
            
            
        TableRowSorter<TableModel> sorter = new TableRowSorter<>(modelo);
        jTable1.setRowSorter(sorter);  
        List<RowSorter.SortKey> sortKeys = new ArrayList<>();
        sortKeys.add(new RowSorter.SortKey(3/** Coluna*/, SortOrder.DESCENDING));
        sorter.setSortKeys(sortKeys);
        

        } catch (IOException e) {
      }
    }
    
    private void atualizarTabela( final long tempo){
       
   new Thread( new Runnable() {
          @Override
          public void run() {
               System.out.println(" Atualizando tabelas :" + new  SimpleDateFormat(" hh:mm:ss ").format(new Date()));
                populaTabela();
                
              try {
                  sleep(tempo);
                  run();
              } catch (InterruptedException ex) {
                  Logger.getLogger(Telaservidor2.class.getName()).log(Level.SEVERE, null, ex);
              }
          }
      }).start();
    }
    
    
    private String pegarUltimaLinha(String linha) {
        String[] split = linha.split("-");
        String[] split1 = split[0].split("Exercicio");
        return split1[1];
    }
  
    
    private String status(String qtd) {
        if(qtd == null || qtd.equals("")) return "";
        String atatus = null;
        double qtdErros = Double.parseDouble(qtd);
        
         if( qtdErros <= 2 ){
            return "<html><font size=5><b><font color=#FFD700>★★★★";
         }else if ( qtdErros >= 2 && qtdErros <= 5){
               atatus = "<html><font size=5><b><font color=#FFD700>★★★";
         }else if( qtdErros <= 5 && qtdErros <= 8 ){
               atatus = "<html><font size=5><b><font color=#FFD700>★★";
         }else if( qtdErros >= 8 ){
               atatus = "<html><font size=5><b><font color=#FFD700>★";
         }
        return atatus;
          
    } 


